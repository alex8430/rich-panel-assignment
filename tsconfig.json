{
  "compilerOptions": {
    "target": "ES2020",                    // Set the JavaScript language version for the output
    "module": "commonjs",                  // Specify the module code generation method
    "outDir": "./build",                   // Directory for output files
    "rootDir": "./src",                    // Directory with source files
    "strict": true,                        // Enable all strict type-checking options
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,               // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                  // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to files
    "baseUrl": ".",                        // Base directory to resolve non-relative module names
    "paths": {
      "*": ["node_modules/*"]              // Path mappings for module resolution
    }
  },
  "include": ["src/**/*.ts"],              // Files to include in the compilation
  "exclude": ["node_modules", "build"]     // Files to exclude from the compilation
}
